{% block javascripts %}
	<script>

		var btnTheme = document.getElementById("theme");
var link = document.getElementById("link");
if (link.href == "") {
sessionStorage.setItem("theme", "https://bootswatch.com/5/cyborg/bootstrap.css");
}
link.href = sessionStorage.getItem("theme");
btnTheme.addEventListener("click", function () {
if (link.href == "https://bootswatch.com/5/solar/bootstrap.css") {
link.href = "https://bootswatch.com/5/cyborg/bootstrap.css";
sessionStorage.setItem("theme", "https://bootswatch.com/5/cyborg/bootstrap.css");
} else {
link.href = "https://bootswatch.com/5/solar/bootstrap.css";
sessionStorage.setItem("theme", "https://bootswatch.com/5/solar/bootstrap.css");
}
});
	</script>
