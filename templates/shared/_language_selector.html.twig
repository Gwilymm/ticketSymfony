<style>
	#language_selector:first-child {
		border-radius: 64px 0 0 64px;
	}

	#language_selector:last-child {
		border-radius: 0 64px 64px 0;
	}

	#language_selector a {
		vertical-align: text-bottom;
	}
</style>

<div id="language_selector" class="btn-group" role="group" aria-label="Basic radio toggle button group">

	<a href="{{ app.request.requesturi | replace({'/en/': '/fr/'}) }}" class="btn {{ app.request.locale == " fr" ? " btn-check btn-primary" : " btn-outline-primary" }}">
		<img src="https://img.icons8.com/fluency/16/000000/france-circular.png"/>
		FR
	</a>

	<a href="{{ app.request.requesturi | replace({'/fr/': '/en/'}) }}" class="btn {{ app.request.locale == " en" ? " btn-check btn-primary" : " btn-outline-primary" }}">
		EN
		<img src="https://img.icons8.com/fluency/16/000000/great-britain-circular.png"/>
	</a>
</div>
