{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">

		<h1>User</h1>

		<table class="table table-striped tabled-bordered">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ user.name }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_user_index') }}" class="btn btn-primary">
			<em class="fa-solid fa-backward"></em>
		</a>

		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
			<em class="fa-solid fa-pen-to-square"></em>
		</a>

		<a href="" class="btn btn-danger">{{ include('user/_delete_form.html.twig') }}</a>
	</div>


{% endblock %}
